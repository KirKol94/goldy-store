    const saleItems = [
        {
            title: 'Стильное кольцо из белого золота c бриллиантами',
            isSale: true,
            saleSize: 45,
            oldPrice: '65 000',
            currentPrice: '41 000',
        },
        {
            title: 'Стильное кольцо из белого золота c бриллиантами',
            isSale: false,
            saleSize: null,
            oldPrice: null,
            currentPrice: '56 000',
        },
        {
